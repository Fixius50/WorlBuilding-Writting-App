<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
         http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>com.worldbuilding</groupId>
  <artifactId>proyecto-worldbuilding</artifactId>
  <version>1.0-SNAPSHOT</version>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <maven.compiler.source>17</maven.compiler.source>
    <maven.compiler.target>17</maven.compiler.target>
    <javafx.version>24.0.1</javafx.version> <!-- o usa la versi칩n que necesites -->
  </properties>

  <dependencies>
    <!-- JavaFX core modules -->
    <dependency>
      <groupId>org.openjfx</groupId>
      <artifactId>javafx-controls</artifactId>
      <version>${javafx.version}</version>
    </dependency>
    <dependency>
      <groupId>org.openjfx</groupId>
      <artifactId>javafx-fxml</artifactId>
      <version>${javafx.version}</version>
    </dependency>
    <dependency>
      <groupId>org.openjfx</groupId>
      <artifactId>javafx-web</artifactId>
      <version>${javafx.version}</version>
    </dependency>
    <!-- Agrega m치s m칩dulos si los necesitas, como javafx-media, javafx-graphics, etc. -->
    <!-- <scope>runtime</scope> poner esto debajo de cada version de cada dependencia si est치 el paquete en local-->
  </dependencies>

  <build>
    <plugins>
      <!-- Plugin para ejecutar la app JavaFX -->
      <plugin>
        <groupId>org.openjfx</groupId>
        <artifactId>javafx-maven-plugin</artifactId>
        <version>0.0.8</version>
        <configuration>
          <mainClass>com.worldbuilding.Main</mainClass>
          <options>
            <option>--add-modules</option>
            <option>javafx.controls,javafx.fxml,javafx.web</option> <!-- agrega javafx.web si usas WebView -->
          </options>
        </configuration>
      </plugin>
    </plugins>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
        <includes>
          <include>**/*</include>
        </includes>
      </resource>
    </resources>
  </build>
</project>
